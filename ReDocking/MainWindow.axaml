<Window x:Class="ReDocking.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:ReDocking"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
        Title="ReDocking"
        d:DesignHeight="450"
        d:DesignWidth="800"
        x:DataType="local:MainWindowViewModel"
        RequestedThemeVariant="Dark"
        mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="EdgeDividerBrush">#FFEBEBEB</SolidColorBrush>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="EdgeDividerBrush">#37000000</SolidColorBrush>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <ControlTheme x:Key="EdgeButton"
                          BasedOn="{StaticResource TransparentButton}"
                          TargetType="Button">
                <Setter Property="Width" Value="32" />
                <Setter Property="Height" Value="32" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
            </ControlTheme>
            <ControlTheme x:Key="EdgeToggleButton"
                          BasedOn="{StaticResource TransparentToggleButton}"
                          TargetType="ToggleButton">
                <Setter Property="Width" Value="32" />
                <Setter Property="Height" Value="32" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
            </ControlTheme>
            <DataTemplate x:Key="EdgeButtonDataTemplate" x:DataType="local:ToolWindowViewModel">
                <ToggleButton IsChecked="{Binding IsSelected.Value}"
                              Theme="{StaticResource EdgeToggleButton}"
                              ToolTip.Tip="{Binding Name.Value}">
                    <ui:FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{Binding Icon.Value}" />
                </ToggleButton>
            </DataTemplate>
            <ItemsPanelTemplate x:Key="EdgeButtonItemsPanelTemplate">
                <StackPanel Spacing="8" />
            </ItemsPanelTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid RowDefinitions="40,1,*">
        <Grid Name="TitleBar" ColumnDefinitions="*,40">
            <Button Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Theme="{StaticResource EdgeButton}">
                <ui:SymbolIcon Symbol="Setting" />
            </Button>
        </Grid>
        <Border Grid.Row="1" Background="{DynamicResource EdgeDividerBrush}" />
        <Grid Grid.Row="2" ColumnDefinitions="40,1,*,1,40">
            <Grid Margin="0,4" RowDefinitions="Auto,*,Auto">
                <StackPanel Grid.Row="1"
                            Width="32"
                            HorizontalAlignment="Center"
                            Spacing="8">
                    <ItemsControl ItemTemplate="{StaticResource EdgeButtonDataTemplate}"
                                  ItemsPanel="{StaticResource EdgeButtonItemsPanelTemplate}"
                                  ItemsSource="{Binding LeftTopTools}" />
                    <Border Height="1"
                            Margin="2,0"
                            Background="{DynamicResource DividerStrokeColorDefaultBrush}" />
                    <ItemsControl ItemTemplate="{StaticResource EdgeButtonDataTemplate}"
                                  ItemsPanel="{StaticResource EdgeButtonItemsPanelTemplate}"
                                  ItemsSource="{Binding LeftTools}" />
                </StackPanel>

                <ItemsControl Grid.Row="2"
                              Width="32"
                              ItemTemplate="{StaticResource EdgeButtonDataTemplate}"
                              ItemsPanel="{StaticResource EdgeButtonItemsPanelTemplate}"
                              ItemsSource="{Binding LeftBottomTools}" />
            </Grid>
            <Border Grid.Column="1" Background="{DynamicResource EdgeDividerBrush}" />
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <!--  Left Tool  -->
                    <ColumnDefinition Width="Auto" />
                    <!--  Left Separator  -->
                    <ColumnDefinition Width="Auto" />
                    <!--  Center  -->
                    <ColumnDefinition Width="*" />
                    <!--  Right Separator  -->
                    <ColumnDefinition Width="Auto" />
                    <!--  Right Tool  -->
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ContentControl Grid.Column="0"
                                MinWidth="50"
                                local:SetGridLengthWhenInvisible.Subscribe="Auto"
                                BorderBrush="{DynamicResource EdgeDividerBrush}"
                                BorderThickness="0,0,1,0"
                                Content="{Binding SelectedLeftTool.Value.Content}"
                                IsVisible="{Binding SelectedLeftTool.Value, Converter={x:Static ObjectConverters.IsNotNull}, Mode=OneWay}" />
                <GridSplitter Grid.Column="1"
                              Width="1"
                              Background="Transparent"
                              IsVisible="{Binding SelectedLeftTool.Value, Converter={x:Static ObjectConverters.IsNotNull}}" />
                <ContentControl Grid.Column="4"
                                MinWidth="50"
                                local:SetGridLengthWhenInvisible.Subscribe="Auto"
                                BorderBrush="{DynamicResource EdgeDividerBrush}"
                                BorderThickness="1,0,0,0"
                                Content="{Binding SelectedRightTool.Value.Content}"
                                IsVisible="{Binding SelectedRightTool.Value, Converter={x:Static ObjectConverters.IsNotNull}}" />
                <GridSplitter Grid.Column="3"
                              Width="1"
                              Background="Transparent"
                              IsVisible="{Binding SelectedRightTool.Value, Converter={x:Static ObjectConverters.IsNotNull}}" />

                <Grid Grid.Column="1" Grid.ColumnSpan="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <!--  Separator  -->
                        <RowDefinition Height="Auto" />
                        <!--  Bottom Tool  -->
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Bottom Tool  -->
                    <Border Grid.Row="2"
                            local:SetGridLengthWhenInvisible.Subscribe="Auto"
                            BorderBrush="{DynamicResource EdgeDividerBrush}"
                            BorderThickness="0,1,0,0">
                        <Border.IsVisible>
                            <MultiBinding Converter="{x:Static BoolConverters.Or}">
                                <Binding Converter="{x:Static ObjectConverters.IsNotNull}" Path="SelectedLeftBottomTool.Value" />
                                <Binding Converter="{x:Static ObjectConverters.IsNotNull}" Path="SelectedRightBottomTool.Value" />
                            </MultiBinding>
                        </Border.IsVisible>
                        <Grid ColumnDefinitions="*,Auto,1,Auto,*">
                            <ContentControl Grid.Column="0"
                                            MinWidth="50"
                                            local:SetGridLengthWhenInvisible.Subscribe="*"
                                            Content="{Binding SelectedLeftBottomTool.Value.Content}"
                                            IsVisible="{Binding SelectedLeftBottomTool.Value, Converter={x:Static ObjectConverters.IsNotNull}}" />

                            <Border Grid.Column="2"
                                    Width="1"
                                    Background="{DynamicResource EdgeDividerBrush}"
                                    IsVisible="{Binding #BottomSplitter.IsVisible}" />
                            <GridSplitter Name="BottomSplitter"
                                          Grid.Column="1"
                                          Grid.ColumnSpan="3"
                                          Background="Transparent">
                                <GridSplitter.IsVisible>
                                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                                        <Binding Converter="{x:Static ObjectConverters.IsNotNull}" Path="SelectedLeftBottomTool.Value" />
                                        <Binding Converter="{x:Static ObjectConverters.IsNotNull}" Path="SelectedRightBottomTool.Value" />
                                    </MultiBinding>
                                </GridSplitter.IsVisible>
                            </GridSplitter>
                            <ContentControl Grid.Column="4"
                                            MinWidth="50"
                                            local:SetGridLengthWhenInvisible.Subscribe="*"
                                            Content="{Binding SelectedRightBottomTool.Value.Content}"
                                            IsVisible="{Binding SelectedRightBottomTool.Value, Converter={x:Static ObjectConverters.IsNotNull}}" />
                        </Grid>
                    </Border>
                    <GridSplitter Grid.Row="1" Background="Transparent" />
                    <Grid Grid.Row="0"
                          Grid.RowSpan="2"
                          ColumnDefinitions="Auto,Auto,*,Auto,Auto">
                        <ContentControl Grid.Column="0"
                                        MinWidth="50"
                                        local:SetGridLengthWhenInvisible.Subscribe="Auto"
                                        BorderBrush="{DynamicResource EdgeDividerBrush}"
                                        BorderThickness="0,0,1,0"
                                        Content="{Binding SelectedLeftTopTool.Value.Content}"
                                        IsVisible="{Binding SelectedLeftTopTool.Value, Converter={x:Static ObjectConverters.IsNotNull}}" />
                        <GridSplitter Grid.Column="1"
                                      Background="Transparent"
                                      IsVisible="{Binding SelectedLeftTopTool.Value, Converter={x:Static ObjectConverters.IsNotNull}}" />
                        <ContentControl Grid.Column="4"
                                        MinWidth="50"
                                        local:SetGridLengthWhenInvisible.Subscribe="Auto"
                                        BorderBrush="{DynamicResource EdgeDividerBrush}"
                                        BorderThickness="1,0,0,0"
                                        Content="{Binding SelectedRightTopTool.Value.Content}"
                                        IsVisible="{Binding SelectedRightTopTool.Value, Converter={x:Static ObjectConverters.IsNotNull}}" />
                        <GridSplitter Grid.Column="3"
                                      Background="Transparent"
                                      IsVisible="{Binding SelectedRightTopTool.Value, Converter={x:Static ObjectConverters.IsNotNull}}" />
                    </Grid>
                </Grid>
            </Grid>
            <Border Grid.Column="3" Background="{DynamicResource EdgeDividerBrush}" />
            <Grid Grid.Column="4"
                  Margin="0,4"
                  RowDefinitions="Auto,*,Auto">
                <StackPanel Grid.Row="1"
                            Width="32"
                            HorizontalAlignment="Center"
                            Spacing="8">
                    <ItemsControl ItemTemplate="{StaticResource EdgeButtonDataTemplate}"
                                  ItemsPanel="{StaticResource EdgeButtonItemsPanelTemplate}"
                                  ItemsSource="{Binding RightTopTools}" />
                    <Border Height="1"
                            Margin="2,0"
                            Background="{DynamicResource DividerStrokeColorDefaultBrush}" />
                    <ItemsControl ItemTemplate="{StaticResource EdgeButtonDataTemplate}"
                                  ItemsPanel="{StaticResource EdgeButtonItemsPanelTemplate}"
                                  ItemsSource="{Binding RightTools}" />
                </StackPanel>

                <ItemsControl Grid.Row="2"
                              Width="32"
                              ItemTemplate="{StaticResource EdgeButtonDataTemplate}"
                              ItemsPanel="{StaticResource EdgeButtonItemsPanelTemplate}"
                              ItemsSource="{Binding RightBottomTools}" />
            </Grid>
        </Grid>
    </Grid>
</Window>