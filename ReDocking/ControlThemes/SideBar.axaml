<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:ReDocking">
    <Design.PreviewWith>
        <controls:SideBar />
    </Design.PreviewWith>
    <ItemsPanelTemplate x:Key="SideBarButtonItemsPanelTemplate">
        <StackPanel Spacing="8" />
    </ItemsPanelTemplate>

    <ControlTheme x:Key="{x:Type controls:SideBar}" TargetType="controls:SideBar">
        <Setter Property="Padding" Value="0,4" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Padding="{TemplateBinding Padding}"
                        Background="Transparent"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    <Grid Name="PART_Grid" RowDefinitions="Auto,*,Auto">
                        <StackPanel Name="PART_Stack"
                                    Grid.Row="0"
                                    Width="32"
                                    HorizontalAlignment="Center">
                            <ItemsControl Name="PART_TopTools"
                                          ItemTemplate="{TemplateBinding ItemTemplate}"
                                          ItemsPanel="{StaticResource SideBarButtonItemsPanelTemplate}"
                                          ItemsSource="{TemplateBinding TopToolsSource}" />
                            <Border Name="PART_Divider"
                                    Height="1"
                                    Margin="2,8"
                                    Background="{DynamicResource DividerStrokeColorDefaultBrush}" />
                            <ItemsControl Name="PART_Tools"
                                          ItemTemplate="{TemplateBinding ItemTemplate}"
                                          ItemsPanel="{StaticResource SideBarButtonItemsPanelTemplate}"
                                          ItemsSource="{TemplateBinding ToolsSource}" />
                        </StackPanel>

                        <ItemsControl Name="PART_BottomTools"
                                      Grid.Row="2"
                                      Width="32"
                                      ItemTemplate="{TemplateBinding ItemTemplate}"
                                      ItemsPanel="{StaticResource SideBarButtonItemsPanelTemplate}"
                                      ItemsSource="{TemplateBinding BottomToolsSource}" />
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
